<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:id="@+id/e1"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/e1"
        android:id="@+id/r"
        android:background="#dedddd">
<Button
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:text="7"


    android:id="@+id/b7"/>
   <Button
       android:layout_width="wrap_content"
       android:layout_height="100dp"
       android:text="8"
       android:layout_toRightOf="@id/b7"

       android:id="@+id/b8"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="9"
        android:layout_toRightOf="@id/b8"
        android:id="@+id/b9"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="4"
        android:layout_below="@id/b7"
        android:id="@+id/b4"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="5"
        android:layout_toRightOf="@id/b4"
        android:layout_below="@id/b8"
        android:id="@+id/b5"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="6"
        android:layout_toRightOf="@id/b5"
        android:layout_below="@id/b9"
        android:id="@+id/b6"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="1"
        android:layout_below="@id/b4"
        android:id="@+id/b1"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="2"
        android:layout_toRightOf="@id/b1"
        android:layout_below="@id/b5"
        android:id="@+id/b2"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="3"
        android:layout_toRightOf="@id/b2"
        android:layout_below="@id/b6"
        android:id="@+id/b3"/>
<Button
    android:layout_width="wrap_content"
    android:layout_height="75dp"
    android:text="/"
    android:layout_toRightOf="@id/b9"
    android:id="@+id/div"/>
<Button
    android:layout_width="wrap_content"
    android:layout_height="75dp"
    android:text="*"
    android:layout_toRightOf="@id/b6"
    android:layout_below="@id/div"
    android:id="@+id/mul"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:text="+"
        android:layout_toRightOf="@id/b3"
        android:layout_below="@id/mul"
        android:id="@+id/plus"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="."
        android:layout_below="@id/b1"
        android:id="@+id/dot"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="0"
        android:layout_toRightOf="@id/dot"
        android:layout_below="@id/b2"
        android:id="@+id/b0"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="DEL"
        android:layout_toRightOf="@id/b0"
        android:layout_below="@id/b3"
        android:id="@+id/del"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="="
        android:layout_toRightOf="@id/del"
        android:layout_below="@id/sub"
        android:id="@+id/eq"
        android:background="#FFFF00"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:text="-"
        android:layout_toRightOf="@id/b3"

        android:id="@+id/sub"
        android:layout_below="@id/plus"/>
</RelativeLayout>
</RelativeLayout>